<% content_for :title do %>
    Foodlog &ndash; <%= DateTime.now %>
<% end %>

<table>
    <thead>
        <tr>
            <td>Meal Type</td>
            <td>Calories</td>
            <td>Proteins</td>
            <td>Carbohydrates</td>
            <td>Fats</td>
            <th colspan="3"></th>
            <tr>
            </thead>
            
<tbody>
<% @entries.each do |entry| %>
<tr>
    <td><%= entry.meal_type %></td>
    <td><%= entry.calories %></td>
    <td><%= entry.proteins %></td>
    <td><%= entry.carbohydrates %></td>
    <td><%= link_to 'Show', entry %></td>
    <td><%= link_to 'Edit', edit_entry_path(entry)%></td>
    <td><%= button_to "Destroy", entry, form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete %>
 </td>
    </tr>
    <% end %>

    </tbody>
    </table>